---
import Container from "./Container.astro";
---

<div class="">
  <Container>
    <!-- Centepurple Header Section -->
    <div class="text-center max-w-3xl mx-auto mb-20">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-800 darkcanceltext-white mb-6">
        The Comprehensive PR Solution
      </h1>
      <p class="text-xl text-gray-600 darkcanceltext-gray-300">
        For Early-Stage and High-Growth Brands
      </p>
      <div class="mt-6 w-20 h-1 bg-secondary/30 mx-auto rounded-full"></div>
    </div>

    <!-- Main Content Grid -->
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <!-- Left: Icons & Categories -->
      <div class="relative">
        <!-- Background Decoration -->
        <div class="absolute inset-0 bg-gradient-to-br from-purple-50/80 to-violet-50/50 darkcancelfrom-purple-900/10 darkcancelto-violet-900/5 rounded-3xl"></div>
        
        <!-- Content Container -->
        <div class="relative p-8">
          <div class="space-y-6">
            <!-- Editorials - Using Newspaper icon -->
            <div class="flex items-start gap-4 bg-white darkcancelbg-gray-800/50 rounded-xl p-4 shadow-sm">
              <div class="w-12 h-12 bg-purple-50 darkcancelbg-purple-900/10 rounded-lg flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-secondary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M4 22h16a2 2 0 0 0 2-2V4a2 2 0 0 0-2-2H8a2 2 0 0 0-2 2v16a2 2 0 0 1-2 2Zm0 0a2 2 0 0 1-2-2v-9c0-1.1.9-2 2-2h2"/>
                  <path d="M18 14h-8"/>
                  <path d="M15 18h-5"/>
                  <path d="M10 6h8v4h-8V6Z"/>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-gray-700 darkcanceltext-white">Editorials</h4>
                <p class="text-sm text-gray-600 darkcanceltext-gray-300 mt-1">Compelling stories that capture attention</p>
              </div>
            </div>

            <!-- Interviews - Using Users icon -->
            <div class="flex items-start gap-4 bg-white darkcancelbg-gray-800/50 rounded-xl p-4 shadow-sm">
              <div class="w-12 h-12 bg-purple-50 darkcancelbg-purple-900/10 rounded-lg flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-secondary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
                  <circle cx="9" cy="7" r="4"/>
                  <path d="M22 21v-2a4 4 0 0 0-3-3.87"/>
                  <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-gray-700 darkcanceltext-white">Interviews</h4>
                <p class="text-sm text-gray-600 darkcanceltext-gray-300 mt-1">Share your expertise with the world</p>
              </div>
            </div>

            <!-- Thought Leadership - Using Lightbulb icon -->
            <div class="flex items-start gap-4 bg-white darkcancelbg-gray-800/50 rounded-xl p-4 shadow-sm">
              <div class="w-12 h-12 bg-purple-50 darkcancelbg-purple-900/10 rounded-lg flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-secondary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M15 14c.2-1 .7-1.7 1.5-2.5 1-.9 1.5-2.2 1.5-3.5A6 6 0 0 0 6 8c0 1 .2 2.2 1.5 3.5.7.7 1.3 1.5 1.5 2.5"/>
                  <path d="M9 18h6"/>
                  <path d="M10 22h4"/>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-gray-700 darkcanceltext-white">Thought Leadership</h4>
                <p class="text-sm text-gray-600 darkcanceltext-gray-300 mt-1">Establish industry authority</p>
              </div>
            </div>

            <!-- Announcements - Using Megaphone icon -->
            <div class="flex items-start gap-4 bg-white darkcancelbg-gray-800/50 rounded-xl p-4 shadow-sm">
              <div class="w-12 h-12 bg-purple-50 darkcancelbg-purple-900/10 rounded-lg flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-secondary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="m3 11 18-5v12L3 14v-3z"/>
                  <path d="M11.6 16.8a3 3 0 1 1-5.8-1.6"/>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-gray-700 darkcanceltext-white">Announcements</h4>
                <p class="text-sm text-gray-600 darkcanceltext-gray-300 mt-1">Amplify your milestones</p>
              </div>
            </div>

            <!-- Comparisons - Using Scale icon -->
            <!-- <div class="flex items-start gap-4 bg-white darkcancelbg-gray-800/50 rounded-xl p-4 shadow-sm">
              <div class="w-12 h-12 bg-purple-50 darkcancelbg-purple-900/10 rounded-lg flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-secondary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M8 3H6a2 2 0 0 0-2 2v3a2 2 0 0 0 2 2h2a2 2 0 0 0 2-2V5a2 2 0 0 0-2-2z"/>
                  <path d="M18 3h-2a2 2 0 0 0-2 2v3a2 2 0 0 0 2 2h2a2 2 0 0 0 2-2V5a2 2 0 0 0-2-2z"/>
                  <path d="M12 12v9"/>
                  <path d="m8 17 4-5 4 5"/>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-gray-700 darkcanceltext-white">Comparisons</h4>
                <p class="text-sm text-gray-600 darkcanceltext-gray-300 mt-1">Stand out from competitors</p>
              </div>
            </div> -->
          </div>
        </div>
      </div>

      <!-- Right: Text Content -->
      <div class="space-y-6">
        <div class="inline-block px-4 py-2 bg-purple-50 darkcancelbg-purple-900/10 rounded-full">
          <span class="text-sm font-medium text-secondary">PR Solution</span>
        </div>
        <h3 class="text-2xl font-bold text-gray-700 darkcanceltext-white">Accelerate Your Brand's Growth</h3>
        <p class="text-gray-600 darkcanceltext-gray-300">Transform your brand's visibility with our targeted PR strategies designed specifically for emerging businesses ready to make their mark.</p>
        
        <div class="space-y-4">
          <div class="flex items-start gap-3">
            <div class="w-6 h-6 flex items-center justify-center rounded-full bg-purple-100 darkcancelbg-purple-900/20 mt-1">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-secondary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            </div>
            <span class="text-gray-600 darkcanceltext-gray-300">Tailopurple PR strategies aligned with your growth stage</span>
          </div>
          <div class="flex items-start gap-3">
            <div class="w-6 h-6 flex items-center justify-center rounded-full bg-purple-100 darkcancelbg-purple-900/20 mt-1">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-secondary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            </div>
            <span class="text-gray-600 darkcanceltext-gray-300">Strategic media placements in top-tier publications</span>
          </div>
          <div class="flex items-start gap-3">
            <div class="w-6 h-6 flex items-center justify-center rounded-full bg-purple-100 darkcancelbg-purple-900/20 mt-1">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-secondary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            </div>
            <span class="text-gray-600 darkcanceltext-gray-300">Data-driven approach to maximize media coverage</span>
          </div>
        </div>

        <!-- <div class="pt-6">
          <a href="#" class="inline-flex items-center gap-2 text-secondary hover:text-secondary/80 font-medium">
            Learn More
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </a>
        </div> -->
      </div>
    </div>
  </Container>
</div>