<div id="companies" class="">
  <Container>
    <div class="max-w-3xl mx-auto text-center mb-12">
      <h2 class="text-3xl font-bold text-gray-700 darkcanceltext-white mb-3">
        Companies We've Worked With
      </h2>
      <p class="text-gray-600 darkcanceltext-gray-300">
        Trusted by innovative companies to drive their media presence and brand growth
      </p>
    </div>

    <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-5 gap-4">
      {companies.map((company) => (
        <div class="relative group">
          <div class="absolute inset-0 bg-gradient-to-br from-red-50/80 to-orange-50/50 darkcancelfrom-red-900/10 darkcancelto-orange-900/5 rounded-xl transform transition-transform group-hover:scale-105"></div>
          
          <div class="relative p-4 flex flex-col items-center text-center">
            <div class="w-12 h-12 bg-white darkcancelbg-gray-800 rounded-lg shadow-md flex items-center justify-center mb-3">
              <Fragment set:html={company.logo} />
            </div>

            <h3 class="text-sm font-bold text-gray-700 darkcanceltext-white mb-1">{company.name}</h3>
            <span class="text-xs text-secondary">{company.metric}</span>
          </div>
        </div>
      ))}
    </div>
  </Container>
</div>