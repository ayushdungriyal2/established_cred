---
import Container from "../components/Container.astro";

const mediaPartners = [
  "TechCrunch",
  "Forbes",
  "WSJ",
  "Reuters",
  "Bloomberg",
  "VentureBeat",
  "CNBC",
  "Business Insider"
];

---

<section class="py- relative">
  <Container>
    <div class="max-w-6xl mx-auto">
      <div>
        <div class="text-center max-w-3xl mx-auto mb-20">
          <h1 class="text-4xl md:text-5xl font-bold text-gray-800 mb-6">
            Media Coverage
          </h1>
          <div class="mt-6 w-20 h-1 bg-secondary/30 mx-auto rounded-full"></div>
        </div>
        
        <div class="relative overflow-hidden">
          <div class="absolute left-0 top-0 w-20 h-full bg-gradient-to-r from-white to-transparent z-10"></div>
          <div class="absolute right-0 top-0 w-20 h-full bg-gradient-to-l from-white to-transparent z-10"></div>
          
          <!-- Two rows moving in opposite directions -->
          <div class="flex flex-col gap-8">
            <div class="flex gap-8 animate-flow-right whitespace-nowrap">
              {[...mediaPartners, ...mediaPartners].map((logo) => (
                <div class="flex-shrink-0">
                  <div class="w-32 h-16 bg-white rounded-lg shadow-sm border border-purple-200 flex items-center justify-center">
                    <span class="text-sm text-gray-600 font-semibold">{logo}</span>
                  </div>
                </div>
              ))}
            </div>
            
            <div class="flex gap-8 animate-flow-left whitespace-nowrap">
              {[...mediaPartners, ...mediaPartners].map((logo) => (
                <div class="flex-shrink-0">
                  <div class="w-32 h-16 bg-white rounded-lg shadow-sm border border-purple-200 flex items-center justify-center">
                    <span class="text-sm text-gray-600 font-semibold">{logo}</span>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </Container>
</section>

<style>
  @keyframes flowRight {
    0% {
      transform: translateX(-50%);
    }
    100% {
      transform: translateX(0%);
    }
  }

  @keyframes flowLeft {
    0% {
      transform: translateX(0%);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .animate-flow-right {
    animation: flowRight 25s linear infinite;
    will-change: transform;
  }

  .animate-flow-left {
    animation: flowLeft 20s linear infinite;
    will-change: transform;
  }
</style>