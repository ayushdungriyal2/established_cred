---

<div class="">
  <Container>
    <div class="flex items-center gap-3 mb-12">
      <h2 class="text-2xl font-bold text-gray-700 md:text-4xl">
        Frequently Asked Questions
      </h2>
    </div>
    
    {/* Changed flex to grid and made it responsive */}
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 lg:gap-12">
      {/* First Column */}
      <div class="space-y-4">
        {faqs.slice(0, Math.ceil(faqs.length / 2)).map((faq, index) => (
          <div class="faq-item border border-gray-100 rounded-xl">
            <button 
              class="flex w-full items-center gap-4 p-5 text-left hover:text-secondary group"
              aria-expanded="false"
              onclick="this.setAttribute('aria-expanded', this.getAttribute('aria-expanded') === 'true' ? 'false' : 'true')"
            >
              <div 
                class="w-10 h-10 flex items-center justify-center rounded-full bg-secondary/10 text-secondary transition-colors group-hover:bg-secondary group-hover:text-white flex-shrink-0 icon-container" 
                set:html={faq.icon} 
              />
              <span class="font-medium text-gray-700 flex-1">{faq.question}</span>
              <svg 
                xmlns="http://www.w3.org/2000/svg" 
                class="h-5 w-5 text-gray-500 transition-transform duration-200 flex-shrink-0" 
                fill="none" 
                viewBox="0 0 24 24" 
                stroke="currentColor"
              >
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </button>
            <div 
              class="faq-answer overflow-hidden"
              aria-hidden="true"
            >
              <p class="px-5 pb-5 text-gray-600 ml-14">
                {faq.answer}
              </p>
            </div>
          </div>
        ))}
      </div>

      {/* Second Column */}
      <div class="space-y-4">
        {faqs.slice(Math.ceil(faqs.length / 2)).map((faq, index) => (
          <div class="faq-item border border-gray-100 rounded-xl">
            <button 
              class="flex w-full items-center gap-4 p-5 text-left hover:text-secondary group"
              aria-expanded="false"
              onclick="this.setAttribute('aria-expanded', this.getAttribute('aria-expanded') === 'true' ? 'false' : 'true')"
            >
              <div 
                class="w-10 h-10 flex items-center justify-center rounded-full bg-secondary/10 text-secondary transition-colors group-hover:bg-secondary group-hover:text-white flex-shrink-0 icon-container" 
                set:html={faq.icon} 
              />
              <span class="font-medium text-gray-700 flex-1">{faq.question}</span>
              <svg 
                xmlns="http://www.w3.org/2000/svg" 
                class="h-5 w-5 text-gray-500 transition-transform duration-200 flex-shrink-0" 
                fill="none" 
                viewBox="0 0 24 24" 
                stroke="currentColor"
              >
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </button>
            <div 
              class="faq-answer overflow-hidden"
              aria-hidden="true"
            >
              <p class="px-5 pb-5 text-gray-600 ml-14">
                {faq.answer}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </Container>
</div>

<style>
  .faq-item button[aria-expanded="true"] svg {
    transform: rotate(180deg);
  }

  .faq-answer {
    max-height: 0;
    transition: max-height 0.3s ease-out;
  }

  .faq-item button[aria-expanded="true"] + .faq-answer {
    max-height: 300px;
  }

  /* Updated icon styles */
  .icon-container {
    z-index: 1;
  }

  .faq-item button[aria-expanded="true"] .icon-container {
    background-color: rgb(var(--color-secondary));
    color: white;
  }

  /* Ensure SVG stays visible */
  .icon-container svg {
    width: 20px;
    height: 20px;
    display: block;
  }
</style>

<script>
  document.addEventListener('astro:page-load', () => {
    const faqButtons = document.querySelectorAll('.faq-item button');
    
    faqButtons.forEach(button => {
      button.addEventListener('click', () => {
        faqButtons.forEach(otherButton => {
          if (otherButton !== button && otherButton.getAttribute('aria-expanded') === 'true') {
            otherButton.setAttribute('aria-expanded', 'false');
          }
        });
      });
    });
  });
</script>