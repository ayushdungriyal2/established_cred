---
import Container from "./Container.astro";

const comparisons = [
  {
    title: "Media Coverage",
    us: {
      highlight: "Guaranteed Placements",
      features: [
        "Pre-arranged coverage in top-tier publications",
        "Dedicated media relationships",
        "Strategic content placement",
        "Consistent monthly features"
      ]
    },
    competitors: {
      title: "Traditional PR Firms",
      features: [
        "Uncertain media placement success",
        "Cold outreach to publications",
        "Random targeting approach",
        "No guaranteed results"
      ]
    }
  },
  {
    title: "Strategy & Execution",
    us: {
      highlight: "Data-Driven Approach",
      features: [
        "Industry-specific media planning",
        "Targeted audience insights",
        "Performance analytics dashboard",
        "ROI-focused campaigns"
      ]
    },
    competitors: {
      title: "Other Agencies",
      features: [
        "Generic PR strategies",
        "Limited industry focus",
        "Basic performance metrics",
        "Volume-based approach"
      ]
    }
  },
  {
    title: "Timeline & Results",
    us: {
      highlight: "Rapid Implementation",
      features: [
        "First placement within 30 days",
        "Consistent monthly coverage",
        "Transparent reporting",
        "Measurable brand impact"
      ]
    },
    competitors: {
      title: "Industry Standard",
      features: [
        "3-6 months initial waiting period",
        "Inconsistent coverage",
        "Unclear timelines",
        "Variable results"
      ]
    }
  }
];
---

<div class=" bg-gradient-to-b from-white to-gray-50">
  <Container>
    <!-- Header -->
    <div class="max-w-3xl mx-auto text-center mb-20">
      <div class="inline-flex items-center justify-center p-2 bg-secondary/10 rounded-full mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 text-secondary">
          <path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25zM8.547 4.505a8.25 8.25 0 1011.672 8.214l-.46-.46a2.252 2.252 0 01-.422-.586l-1.08-2.16a.414.414 0 00-.663-.107.827.827 0 01-.812.21l-1.273-.363a.89.89 0 00-.738 1.595l.587.39c.59.395.674 1.23.172 1.732l-.2.2c-.211.212-.33.498-.33.796v.41c0 .409-.11.809-.32 1.158l-1.315 2.191a2.11 2.11 0 01-1.81 1.025 1.055 1.055 0 01-1.055-1.055v-1.172c0-.92-.56-1.747-1.414-2.089l-.654-.261a2.25 2.25 0 01-1.384-2.46l.007-.042a2.25 2.25 0 01.29-.787l.09-.15a2.25 2.25 0 012.37-1.048l1.178.236a1.125 1.125 0 001.302-.795l.208-.73a1.125 1.125 0 00-.578-1.315l-.665-.332-.091.091a2.25 2.25 0 01-1.591.659h-.18c-.249 0-.487.1-.662.274a.931.931 0 01-1.458-1.137l1.279-2.132z" clip-rule="evenodd" />
        </svg>
      </div>
      <h2 class="text-4xl font-bold text-gray-800 mb-6">
        Why Choose Us
      </h2>
      <p class="text-lg text-gray-600">
        See how our innovative approach sets new standards in PR excellence
      </p>
    </div>

    <!-- Comparison Cards -->
    <div class="grid gap-8 lg:grid-cols-3">
      {comparisons.map((item) => (
        <div class="relative">
          {/* Card */}
          <div class="h-full rounded-3xl bg-white shadow-lg overflow-hidden">
            {/* Header */}
            <div class="p-8 bg-gradient-to-br from-secondary/10 to-transparent">
              <h3 class="text-2xl font-bold text-gray-800 mb-3">{item.title}</h3>
              <div class="inline-flex px-4 py-2 bg-secondary/10 rounded-full">
                <span class="text-secondary font-medium">{item.us.highlight}</span>
              </div>
            </div>

            {/* Content */}
            <div class="p-8 pt-4">
              {/* Our Approach */}
              <div class="mb-8">
                <h4 class="text-lg font-semibold text-gray-700 mb-4 flex items-center gap-2">
                  <div class="w-8 h-8 rounded-full bg-secondary/10 flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-secondary">
                      <path fill-rule="evenodd" d="M8.603 3.799A4.49 4.49 0 0112 2.25c1.357 0 2.573.6 3.397 1.549a4.49 4.49 0 013.498 1.307 4.491 4.491 0 011.307 3.497A4.49 4.49 0 0121.75 12a4.49 4.49 0 01-1.549 3.397 4.491 4.491 0 01-1.307 3.497 4.491 4.491 0 01-3.497 1.307A4.49 4.49 0 0112 21.75a4.49 4.49 0 01-3.397-1.549 4.49 4.49 0 01-3.498-1.306 4.491 4.491 0 01-1.307-3.498A4.49 4.49 0 012.25 12c0-1.357.6-2.573 1.549-3.397a4.49 4.49 0 011.307-3.497 4.49 4.49 0 013.497-1.307zm7.007 6.387a.75.75 0 10-1.22-.872l-3.236 4.53L9.53 12.22a.75.75 0 00-1.06 1.06l2.25 2.25a.75.75 0 001.14-.094l3.75-5.25z" clip-rule="evenodd" />
                    </svg>
                  </div>
                  Our Approach
                </h4>
                <ul class="space-y-3">
                  {item.us.features.map((feature) => (
                    <li class="flex items-start gap-2 text-gray-600">
                      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mt-0.5 flex-shrink-0 text-secondary" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                      </svg>
                      {feature}
                    </li>
                  ))}
                </ul>
              </div>

              {/* Competitors */}
              <div class="pt-8 border-t border-gray-100">
                <h4 class="text-lg font-semibold text-gray-700 mb-4 flex items-center gap-2">
                  <div class="w-8 h-8 rounded-full bg-gray-100 flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-gray-400">
                      <path fill-rule="evenodd" d="M4.755 10.059a7.5 7.5 0 0112.548-3.364l1.903 1.903h-3.183a.75.75 0 100 1.5h4.992a.75.75 0 00.75-.75V4.356a.75.75 0 00-1.5 0v3.18l-1.9-1.9A9 9 0 003.306 9.67a.75.75 0 101.45.388zm15.408 3.352a.75.75 0 00-.919.53 7.5 7.5 0 01-12.548 3.364l-1.902-1.903h3.183a.75.75 0 000-1.5H2.984a.75.75 0 00-.75.75v4.992a.75.75 0 001.5 0v-3.18l1.9 1.9a9 9 0 0015.059-4.035.75.75 0 00-.53-.918z" clip-rule="evenodd" />
                    </svg>
                  </div>
                  {item.competitors.title}
                </h4>
                <ul class="space-y-3">
                  {item.competitors.features.map((feature) => (
                    <li class="flex items-start gap-2 text-gray-500">
                      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mt-0.5 flex-shrink-0 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
                      </svg>
                      {feature}
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>


  </Container>
</div>