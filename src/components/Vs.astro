---
import Container from "./Container.astro";

const features = [
  {
    traditional: {
      title: "Traditional PR",
      description: "Time-consuming research & planning",
      icon: `<path fill-rule="evenodd" d="M9.315 7.584C12.195 3.883 16.695 1.5 21.75 1.5a.75.75 0 01.75.75c0 5.056-2.383 9.555-6.084 12.436A6.75 6.75 0 019.75 22.5a.75.75 0 01-.75-.75v-4.131A15.838 15.838 0 016.382 15H2.25a.75.75 0 01-.75-.75 6.75 6.75 0 017.815-6.666zM15 6.75a2.25 2.25 0 100 4.5 2.25 2.25 0 000-4.5z" clip-rule="evenodd" />`
    },
    modern: {
      title: "Guaranteed Coverage",
      description: "Pre-arranged media coverage from day one",
      badge: "Time Saved",
      icon: `<path fill-rule="evenodd" d="M14.615 1.595a.75.75 0 01.359.852L12.982 9.75h7.268a.75.75 0 01.548 1.262l-10.5 11.25a.75.75 0 01-1.272-.71l1.992-7.302H3.75a.75.75 0 01-.548-1.262l10.5-11.25a.75.75 0 01.913-.143z" clip-rule="evenodd" />`
    }
  },
  {
    traditional: {
      title: "Manual Strategy",
      description: "Constant updates & monitoring needed",
      icon: `<path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25zM12.75 6a.75.75 0 00-1.5 0v6c0 .414.336.75.75.75h4.5a.75.75 0 000-1.5h-3.75V6z" clip-rule="evenodd" />`
    },
    modern: {
      title: "Expert-Driven Strategy",
      description: "Industry-specific approach by specialists",
      badge: "Expertise Guaranteed",
      icon: `<path fill-rule="evenodd" d="M11.54 22.351l.07.04.028.016a.76.76 0 00.723 0l.028-.015.071-.041a16.975 16.975 0 001.144-.742 19.58 19.58 0 002.683-2.282c1.944-1.99 3.963-4.98 3.963-8.827a8.25 8.25 0 00-16.5 0c0 3.846 2.02 6.837 3.963 8.827a19.58 19.58 0 002.682 2.282 16.975 16.975 0 001.145.742zM12 13.5a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />`
    }
  },
  {
    traditional: {
      title: "Uncertain Results",
      description: "Cold outreach with no guarantees",
      icon: `<path d="M16.881 4.346A23.112 23.112 0 018.25 6H7.5a5.25 5.25 0 00-.88 10.427 21.593 21.593 0 001.378 3.94c.464 1.004 1.674 1.32 2.582.796l.657-.379c.88-.508 1.165-1.592.772-2.468a17.116 17.116 0 01-.628-1.607c1.918.258 3.76.75 5.5 1.446A21.727 21.727 0 0018 11.25c0-2.413-.393-4.735-1.119-6.904zM18.26 3.74a23.22 23.22 0 011.24 7.51 23.22 23.22 0 01-1.24 7.51c-.055.161-.111.322-.17.482a.75.75 0 101.409.516 24.555 24.555 0 001.415-6.43 2.992 2.992 0 00.836-2.078c0-.806-.319-1.54-.836-2.078a24.65 24.65 0 00-1.415-6.43.75.75 0 10-1.409.516c.059.16.115.321.17.483z" />`
    },
    modern: {
      title: "Guaranteed Placement",
      description: "Pre-arranged coverage with results",
      badge: "Peace of Mind",
      icon: `<path fill-rule="evenodd" d="M2.25 12c0-5.385 4.365-9.75 9.75-9.75s9.75 4.365 9.75 9.75-4.365 9.75-9.75 9.75S2.25 17.385 2.25 12zm13.36-1.814a.75.75 0 10-1.22-.872l-3.236 4.53L9.53 12.22a.75.75 0 00-1.06 1.06l2.25 2.25a.75.75 0 001.14-.094l3.75-5.25z" clip-rule="evenodd" />`
    }
  }
];
---

<div id="solution" class="mt-[-400px] relative overflow-hidden">
  <!-- Background Elements -->
  <div class="absolute inset-0 bg-gradient-to-br from-red-50 via-white to-red-50/30"></div>
  <div class="absolute -top-24 -right-24 w-96 h-96 bg-red-100/30 rounded-full mix-blend-multiply blur-3xl"></div>
  <div class="absolute -bottom-24 -left-24 w-96 h-96 bg-red-100/30 rounded-full mix-blend-multiply blur-3xl"></div>

  <Container>
    <div class="relative pt-16 pb-8">
      <!-- Header -->
      <div class="max-w-3xl mx-auto text-center mb-20">
        <div class="inline-flex items-center justify-center p-2 bg-red-100/50 rounded-full mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 text-secondary">
            <path fill-rule="evenodd" d="M14.615 1.595a.75.75 0 01.359.852L12.982 9.75h7.268a.75.75 0 01.548 1.262l-10.5 11.25a.75.75 0 01-1.272-.71l1.992-7.302H3.75a.75.75 0 01-.548-1.262l10.5-11.25a.75.75 0 01.913-.143z" clip-rule="evenodd" />
          </svg>
        </div>
        <h2 class="text-4xl font-bold text-gray-700 mb-6">
          Experience the Difference
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          See how our innovative approach transforms the PR experience, delivering guaranteed results where traditional methods fall short
        </p>
      </div>

      <!-- Comparison Cards -->
      <div class="space-y-8">
        {features.map((feature, index) => (
          <div class="relative">
            <!-- Connection Line -->
            <div class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 w-12 h-12 rounded-full border-4 border-red-200 bg-white z-20 flex items-center justify-center">
              <span class="text-secondary font-bold">VS</span>
            </div>
            
            <div class="grid md:grid-cols-2 gap-4 relative">
              <!-- Traditional Side -->
              <div class="group p-6 bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300">
                <div class="flex items-start gap-4">
                  <div class="w-12 h-12 rounded-xl bg-gray-100 flex items-center justify-center group-hover:bg-gray-200 transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 text-gray-600">
                      <Fragment set:html={feature.traditional.icon} />
                    </svg>
                  </div>
                  <div class="flex-1">
                    <h3 class="text-lg font-semibold text-gray-700 mb-2">{feature.traditional.title}</h3>
                    <p class="text-gray-600">{feature.traditional.description}</p>
                  </div>
                </div>
              </div>

              <!-- Modern Side -->
              <div class="group p-8 rounded-2xl bg-gradient-to-br from-red-50 to-white border border-red-100 hover:shadow-xl transition-all duration-300">
                <div class="flex items-start gap-6">
                  <div class="shrink-0 w-14 h-14 rounded-xl bg-secondary flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-7 h-7 text-white">
                      <Fragment set:html={feature.modern.icon} />
                    </svg>
                  </div>
                  <div class="flex-1">
                    <h3 class="text-xl font-semibold text-gray-700 mb-2">{feature.modern.title}</h3>
                    <p class="text-lg text-gray-600">{feature.modern.description}</p>
                    <span class="inline-flex mt-3 text-sm font-medium text-secondary bg-red-100 px-4 py-1.5 rounded-full">
                      {feature.modern.badge}
                    </span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </Container>
</div>

<style>
  @keyframes float {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }
  .float {
    animation: float 6s ease-in-out infinite;
  }
</style>