---
import Container from "./Container.astro";
---

<div id="case-studies" class="">
  <Container>
    <div class="space-y-24">
      <div class="max-w-3xl mx-auto text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-700 darkcanceltext-white mb-3">
          Case Studies
        </h2>
        <p class="text-gray-600 darkcanceltext-gray-300">
          See how we've helped companies achieve remarkable growth through strategic partnerships
        </p>
      </div>

      <!-- Case Studies with Alternating Layout -->
      <div class="space-y-32">
        
        <!-- Case Study 1 - Lerna.ai - Left Aligned -->
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <!-- Left: Visual Content -->
          <div class="relative">
            <!-- Background Decoration -->
            <div class="absolute inset-0 bg-gradient-to-br from-red-50/80 to-orange-50/50 darkcancelfrom-red-900/10 darkcancelto-orange-900/5 rounded-3xl"></div>
            
            <!-- Content Container -->
            <div class="relative p-8">
              <!-- Logo -->
              <div class="mb-8">
                <div class="w-16 h-16 bg-white darkcancelbg-gray-800 rounded-xl shadow-md flex items-center justify-center">
