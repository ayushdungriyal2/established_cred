---
import Container from "../components/Container.astro";

const metrics = [
    {
        title: "Brand Authority Growth",
        value: "280%",
        growth: "+32%",
        mainPublication: {
            name: "Forbes",
            logo: "https://upload.wikimedia.org/wikipedia/commons/c/cb/Forbes_circle.png",
            date: "Dec 2023"
        },
        details: [
            { label: "Domain Authority", value: "76/100", source: "TechCrunch Feature" },
            { label: "Trust Score", value: "92%", source: "WSJ Mention" },
            { label: "Brand Mentions", value: "12.4k", source: "Reuters Coverage" }
        ],
        className: "col-span-2 h-full"
    },
    {
        title: "Revenue Impact",
        value: "$2.8M",
        growth: "+45%",
        mainPublication: {
            name: "TechCrunch",
            logo: "https://cdn.icon-icons.com/icons2/2699/PNG/512/techcrunch_logo_icon_170624.png",
            date: "Jan 2024"
        },
        details: [
            { label: "Conversion Rate", value: "4.2%", source: "Forbes Interview" },
            { label: "Avg. Deal Size", value: "$48k", source: "Bloomberg Report" },
            { label: "ROI", value: "312%", source: "WSJ Analysis" }
        ],
        className: "h-full"
    },
    {
        title: "Market Reach",
        value: "1.2M",
        growth: "+28%",
        mainPublication: {
            name: "WSJ",
            logo: "/api/placeholder/80/30",
            date: "Feb 2024"
        },
        details: [
            { label: "Impressions", value: "3.2M", source: "Forbes Feature" },
            { label: "Engagement", value: "18%", source: "TechCrunch Article" },
            { label: "Markets", value: "32+", source: "Reuters Coverage" }
        ],
        className: "h-full"
    },
    {
        title: "Lead Generation",
        value: "12.4k",
        growth: "+52%",
        mainPublication: {
            name: "Reuters",
            logo: "/api/placeholder/80/30",
            date: "Mar 2024"
        },
        details: [
            { label: "MQL Rate", value: "24%", source: "Bloomberg Feature" },
            { label: "SQL Rate", value: "68%", source: "WSJ Article" },
            { label: "Close Rate", value: "42%", source: "Forbes Analysis" }
        ],
        className: "h-full"
    },
    {
        title: "Media Coverage",
        value: "400+",
        growth: "+38%",
        mainPublication: {
            name: "Bloomberg",
            logo: "/api/placeholder/80/30",
            date: "Mar 2024"
        },
        details: [
            { label: "Top Tier", value: "85%", source: "TechCrunch Report" },
            { label: "Industry", value: "120+", source: "Reuters Feature" },
            { label: "Features", value: "240+", source: "Forbes Coverage" }
        ],
        className: "h-full"
    }
];
---

<div class="relative min-h-screen overflow-hidden font-sans" id="home">
    <!-- Hero section remains unchanged -->
    <div class="relative bg-blue-700 h-[80vh]">
        <!-- Previous hero content -->
    </div>

    <Container>
        <div class="grid grid-cols-3 grid-rows-2 gap-6 -mt-12 relative z-10">
            {metrics.map((metric) => (
                <div class={`group bg-white rounded-xl p-6 hover:bg-gray-50 transition-all flex flex-col justify-between border border-slate-200 shadow-lg ${metric.className}`}>
                    <div class="flex flex-col h-full">
                        <div class="flex items-center justify-between mb-4">
                            <h3 class="text-lg font-medium text-slate-800">{metric.title}</h3>
                            <span class="text-sm px-2 py-1 bg-green-50 text-green-600 rounded-full font-medium">
                                {metric.growth}
                            </span>
                        </div>

                        <div class="flex items-center justify-between mb-6">
                            <div class="text-3xl font-bold text-slate-800">
                                {metric.value}
                            </div>
                            <div class="flex items-center gap-2 px-3 py-1.5 bg-blue-50 rounded-lg">
                                <img src={metric.mainPublication.logo} alt={metric.mainPublication.name} class="h-5 w-5 object-contain" />
                                <div class="flex flex-col">
                                    <span class="text-xs text-blue-600 font-medium">Featured in {metric.mainPublication.name}</span>
                                    <span class="text-xs text-blue-500">{metric.mainPublication.date}</span>
                                </div>
                            </div>
                        </div>

                        <div class="grid grid-cols-3 gap-3 mb-6 flex-1">
                            {metric.details.map(detail => (
                                <div class="bg-slate-50 rounded-lg p-3 flex flex-col justify-between">
                                    <div class="mb-2">
                                        <span class="text-xs text-slate-500">{detail.label}</span>
                                        <div class="text-slate-800 font-semibold">{detail.value}</div>
                                    </div>
                                    <div class="text-[10px] text-blue-500 font-medium">
                                        via {detail.source}
                                    </div>
                                </div>
                            ))}
                        </div>

                        <div class="flex items-center gap-2">
                            <div class="h-1 flex-1 bg-slate-100 rounded-full overflow-hidden">
                                <div class="h-full bg-blue-500 rounded-full" style={`width: ${parseInt(metric.growth)}%`}></div>
                            </div>
                            <span class="text-xs text-slate-500">Since Publication</span>
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </Container>
    <div class="bg-white h-screen -mt-96"></div>
</div>