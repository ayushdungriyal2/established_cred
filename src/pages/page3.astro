---
import Container from "../components/Container.astro";

const metrics = [
    {
        title: "Brand Authority Growth",
        value: "280%",
        growth: "+32%",
        details: [
            { label: "Domain Authority", value: "76/100" },
            { label: "Trust Score", value: "92%" },
            { label: "Brand Mentions", value: "12.4k" }
        ],
        className: "col-span-2 h-full"
    },
    {
        title: "Revenue Impact",
        value: "$2.8M",
        growth: "+45%",
        details: [
            { label: "Conversion Rate", value: "4.2%" },
            { label: "Avg. Deal Size", value: "$48k" },
            { label: "ROI", value: "312%" }
        ],
        className: "h-full"
    },
    {
        title: "Market Reach",
        value: "1.2M",
        growth: "+28%",
        details: [
            { label: "Impressions", value: "3.2M" },
            { label: "Engagement", value: "18%" },
            { label: "Markets", value: "32+" }
        ],
        className: "h-full"
    },
    {
        title: "Lead Generation",
        value: "12.4k",
        growth: "+52%",
        details: [
            { label: "MQL Rate", value: "24%" },
            { label: "SQL Rate", value: "68%" },
            { label: "Close Rate", value: "42%" }
        ],
        className: "h-full"
    },
    {
        title: "Media Coverage",
        value: "400+",
        growth: "+38%",
        details: [
            { label: "Top Tier", value: "85%" },
            { label: "Industry", value: "120+" },
            { label: "Features", value: "240+" }
        ],
        className: "h-full"
    }
];
---

<div class="relative min-h-screen overflow-hidden font-sans" id="home">
    <div class="relative bg-blue-700 h-[80vh]">
        <Container>
            <div class="relative pt-48">
                <div class="text-center mx-auto">
                    <h1 class="text-4xl md:text-6xl font-bold mb-6">
                        <span class="text-white">Guaranteed Coverage for More <br>  Trust On Top-Tier Media</span>
                        </span><br/>
                        <!-- <span class="text-blue-200">Brand Visibility</span>
                        <span class="text-white">through Earned Media Features</span><br/> -->
                    </h1>
                    
                    <p class="text-blue-100 text-lg mb-10 max-w-2xl mx-auto">
                        Differentiate your brand with strategic placements in Top Tier publications
                    </p>

                    <div class="flex justify-center gap-4 mb-10">
                        <button class="bg-white text-blue-700 px-8 py-3 rounded-lg font-medium hover:bg-blue-50 transition-all shadow-sm">
                            Book a Free Demo Now
                        </button>
                    </div>

                    <div class="flex justify-center items-center gap-6">
                        <div class="flex gap-1">
                            <img src="https://cdn.icon-icons.com/icons2/2699/PNG/512/techcrunch_logo_icon_170624.png" alt="TechCrunch" class="w-10 h-10 rounded-lg bg-white p-1 shadow-sm" />
                            <img src="https://upload.wikimedia.org/wikipedia/commons/c/cb/Forbes_circle.png" alt="Forbes" class="w-10 h-10 rounded-lg bg-white p-1 shadow-sm" />
                        </div>
                        <div class="h-8 w-px bg-blue-400/30"></div>
                        <div class="flex items-center gap-2">
                            <span class="text-blue-100">950+ Publications</span>
                        </div>
                        <div class="h-8 w-px bg-blue-400/30"></div>
                        <div class="flex items-center gap-2 text-blue-100">
                            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"/>
                                <circle cx="12" cy="12" r="3"/>
                            </svg>
                            <span>100M+ Readership</span>
                        </div>
                    </div>
                </div>
            </div>
        </Container>
    </div>

    <Container>
        <div class="grid grid-cols-3 grid-rows-2 gap-6 -mt-12 relative z-10">
            {metrics.map((metric) => (
                <div class={`group bg-white rounded-xl p-6 hover:bg-gray-50 transition-all flex flex-col justify-between border border-slate-200 shadow-lg ${metric.className}`}>
                    <div class="flex flex-col h-full">
                        <div class="flex items-center justify-between mb-6">
                            <h3 class="text-lg font-medium text-slate-800">{metric.title}</h3>
                            <span class="text-sm px-2 py-1 bg-green-50 text-green-600 rounded-full font-medium">
                                {metric.growth}
                            </span>
                        </div>
                        
                        <div class="text-3xl font-bold text-slate-800 mb-8">
                            {metric.value}
                        </div>

                        <div class="grid grid-cols-3 gap-4 mb-6 flex-1">
                            {metric.details.map(detail => (
                                <div class="bg-slate-50 rounded-lg p-3 flex flex-col justify-between">
                                    <span class="text-xs text-slate-500 mb-2">{detail.label}</span>
                                    <span class="text-slate-800 font-semibold">{detail.value}</span>
                                </div>
                            ))}
                        </div>

                        <div class="h-1 w-full bg-slate-100 rounded-full overflow-hidden">
                            <div class="h-full bg-blue-500 rounded-full" style={`width: ${parseInt(metric.growth)}%`}></div>
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </Container>
    <div class="bg-white h-screen -mt-96"></div>
</div>